MY CODE                                                       TC=O(N) SC=O(1)
bool isValid(string word) {
            int n=word.size();
            int size=0;
            int nv=0;
            int nc=0;
            for(int i=0;i<n;i++){
                char ch=word[i];
                if((ch>='a' && ch<='z') || (ch>='A' && ch<='Z')){
                    if(ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u' || ch=='A' || ch=='E' || ch=='I' || ch=='O' || ch=='U'){
                        nv++;
                    }else{
                        nc++;
                    }
                    size++;
                }else if(ch>='0' && ch<='9'){
                    size++;
                }else{
                    return false;
                }
            }
            if(size>=3 && nv>=1 && nc>=1){
                return true;
            }
            return false;
    }







    WITH STL FUNCTIONS-
    bool isValid(string word) {
            int n=word.size();
            if(n<3){
                return false;
            }
            int size=0;
            int nv=0;
            int nc=0;
            for(int i=0;i<n;i++){
                char ch=word[i];
                if(isalpha(ch)){
                    ch=tolower(ch);
                    if(ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u'){
                        nv++;
                    }else{
                        nc++;
                    }
                }else if(!isdigit(ch)){
                    return false;
                }
            }
            if(nv>=1 && nc>=1){
                return true;
            }
            return false;
    }
