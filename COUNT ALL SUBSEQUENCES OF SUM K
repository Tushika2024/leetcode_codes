 int helper(vector<int>&arr,int target, int indx,int sum){   TC=O(2 POWER N) SC=O(N)
        if(sum>target) return 0;
        if(indx>=arr.size()){
            if(sum==target) return 1;
            return 0;
        }
        int left=helper(arr,target,indx+1,sum+arr[indx]);
        int right=helper(arr,target,indx+1,sum);
        return left+right;
        
    }
    int perfectSum(vector<int>& arr, int target) {
        // code here
        return helper(arr,target,0,0);
        
    }
